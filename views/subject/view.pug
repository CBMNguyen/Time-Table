extends ../layouts/common
block content
	h1.mt-5.mb-5.font-weight-bolder VIEW
		span
			a.btn.btn-primary.btn-sm.mb-2.ml-2(href="/subject/create/"+ subject.id) New Note
	h3.text-center.font-weight-bolder.text-success= subject.name
	ul
		each news in subject.news
			.w-50
				li
					.d-flex
						h4.text-dark= news.heading
						.i.zmdi.zmdi-favorite.text-danger.ml-2.mt-1
						a(href="/subject/edit/"+subject.id+'+'+news.date).ml-auto
							.i.zmdi.zmdi-brush.text-primary.mt-1
						a(href="/subject/remove/"+subject.id+'+'+news.date)
							.i.zmdi.zmdi-close.text-danger.ml-2.mt-1
				span
					ul.list-group.list-group-flush
						each note in news.notes
							li.list-group-item= note
						li.list-group-item
							if news.link
								p.d-inline.text-dark.font-weight-bold Link: 
								a.text-decoration-none(href="" + news.link)= news.link
				h6.small.text-center.text-danger= news.date
			
				

