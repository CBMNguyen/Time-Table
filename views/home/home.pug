extends ../layouts/common
block content
	a.mt-3.mt-5.font-weight-bolder(href = "/subject/create", class = "btn btn-primary") New Subject

	audio#audio4.au(controls src='/audio/SREBAHYE.mp3' autoplay loop)

	.d-block.mt-3
		form.w-100.m-auto(action="/", method="GET")
			.text-center
				span.font-weight-bolder.mr-1 Category:
				select(name="category").custom-select.custom-select-sm.select-l
					if values.category
						option.d-none(value= values.category)= values.category
						option(value='OneDayOfMe') OneDayOfMe
						option(value='school') School
						option(value='web') web
					else
						option.d-none(value='school') School
						option(value='OneDayOfMe') OneDayOfMe
						option(value='school') School
						option(value='web') web

				span.font-weight-bolder.mr-1 Học kì:
				select(name="term").custom-select.custom-select-sm.select-m
					if values.term
						option.d-none(value= values.term)= values.term
						option(value='none') none
						option(value='2') 2
						option(value='hè') hè
					else
						option.d-none(value='2') 2
						option(value='none') none
						option(value='2') 2
						option(value='hè') hè
				

				span.font-weight-bolder.ml-3.mr-1 - Năm học:
				select(name="year").custom-select.custom-select-sm.select-l
					if values.year
						option.d-none(value= values.year)= values.year
						option(value='2019-2020') 2019-2020
					else
						option.d-none(value='2019-2020') 2019-2020
						option(value='2019-2020') 2019-2020
					
						
				button.btn.btn-sm.btn-primary.mb-1.ml-3.mt-1 Search
				
		form.mt-3.mb-4.ml-auto.w-100(action = "/", method = "GET", class= "d-flex")
			input#myInput.form-control(name = "search", placeholder="Search")

	.table-responsive-sm
		table.table.table-hover#myTable
			tr.bg-light
				th.text-center STT
				th Mã HP
				th Tên Học Phần
				th Tên Giáo Viên
				th.text-center Ghi Chú
			if subjects
				each subject, index in subjects
					tr 
						td(class = "text-center")= index + 1
						td= subject.mamon
						td= subject.name
						td= subject.gvname

						td(class = "text-center")
							a.anotification.text-decoration-none(href = "subject/"+ subject.id) View
								span.mb(class="badge badge-danger rounded notification")= subject.amount
